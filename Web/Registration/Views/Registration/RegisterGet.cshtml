@model Registration.Models.RegistrationFormDto
@using Registration.Controllers
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="card col-9">
            <div class="card-body row">
                <div class="col-12">
                    <div>
                        <h3 class="card-title row justify-content-center">Registration</h3>
                    </div>
                    <form asp-route="@nameof(RegistrationController.RegisterPost)" class="card-title row justify-content-center m-5">
                        <div class="w-100">
                            <div class="form-group">
                                <input class="form-control" placeholder="Username" asp-for="UserName" autofocus>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autocomplete="off">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <button class="btn btn-primary" name="button" value="register">Register</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-12">
                    <partial name="../Shared/_ApiErrorSummary.cshtml" />
                </div>
            </div>
        </div>
    </div>
</div>