@model Registration.Views.Registration.User
@{
    ViewData["Title"] = "Registration Confirmation";
    var loginUrl = ViewData["LoginUrl"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="card">
            <div class="card-body">
                <span>Registration successful. A confirmation email has been sent to @Model.Email</span>
                <span>Click <a href="@loginUrl">here</a> to return to the login page.</span>
            </div>
        </div>
    </div>
</div>
