
@{
    ViewData["Title"] = "Password Reset Confirmation";
    var loginUrl = ViewData["LoginUrl"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="card">
            <div class="card-body">
                <span>Your password has been reset.</span>
                <span>Click <a href="@loginUrl">here</a> to return to the login page.</span>
            </div>
        </div>
    </div>
</div>

