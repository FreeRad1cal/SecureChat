
@{
    ViewData["Title"] = "Password Reset Request Submitted";
    var loginUrl = ViewData["LoginUrl"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="card">
            <div class="card-body">
                <span>An email with instructions to reset your password has been sent. Click <a href="@loginUrl">here to return to the login page.</a></span>
            </div>
        </div>
    </div>
</div>