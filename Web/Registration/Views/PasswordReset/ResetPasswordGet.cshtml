@using Registration.Controllers
@model Registration.ViewModels.ResetPasswordGetViewModel
@{
    ViewData["Title"] = "Password Reset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="card col-9">
            <div class="card-body row">
                <div class="col-12">
                    <div>
                        <h3 class="card-title row justify-content-center">Password Reset</h3>
                    </div>
                    <form asp-route="@nameof(PasswordResetController.ResetPasswordPost)" class="card-title row justify-content-center m-5">
                        <div class="w-100">
                            <div class="form-group">
                                <input class="form-control" placeholder="User Name" asp-for="UserName" autofocus>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <button class="btn btn-primary" name="button" value="changePassword">Request Password Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-12">
                    <partial name="../Shared/_ApiErrorSummary.cshtml" />
                </div>
            </div>
        </div>
    </div>
</div>